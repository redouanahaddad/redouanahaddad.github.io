---
import { profile } from '../data/profile';
import { Icon } from 'astro-icon';

const { backToHome } = Astro.props;
---
<style>
  header {
    padding: 1rem;
    width: 100%;
    display: flex;
    align-items: center;
  }

  nav {
    width: 100%;
  }

  nav ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
  }

  nav ul li:last-of-type {
    text-align: right;
  }

  nav ul li a {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    position: relative;
    color: #000;
    font-weight: 300;
  }

  nav ul li a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #000;
    transform: scaleX(0);
    transform-origin: left center;
    transition: transform 0.3s ease-in-out;
  }

  nav ul li a:hover::after {
    transform: scaleX(1);
  }
</style>

<header>
  <nav>
    <ul>
      <li>
        {
          backToHome ? (
            <a class="header__back-link nav-item-with-icon" href="/" title="Return Home">
              <Icon name="ic:round-arrow-back" width="24px" height="24px" /> <span>Back</span>
            </a>
          ) : (
            <a href="/about">A propos</a>
          )
        }
      </li>
      <li><a href="/">{profile.name}</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>
