---
import { profile } from '../data/profile';
import { Icon } from 'astro-icon';

const { backToHome } = Astro.props;
---

<style>
  header {
    padding: 1rem;
    width: 100%;
    display: flex;
    align-items: center;
  }
  nav {
    width: 100%;
  }
  nav ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
    /* font-size: var(--step--1); */
  }
  nav ul li:last-of-type {
    text-align: right;
  }
  nav ul li a {
    display: inline-flex;
    text-decoration: none;
  }
  nav ul li a:hover {
    opacity: 0.8;
  }
  .header__back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>

<header>
  <nav>
    <ul>
      <li>
        {
          backToHome ? (
            <a class="header__back-link" href="/" title="Return Home">
              <Icon name="ic:round-arrow-back" width="24px" height="24px" /> Back
            </a>
          ) : (
            <a href="/about">A propos</a>
          )
        }
      </li>
      <li><a href="/">{profile.name}</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>
